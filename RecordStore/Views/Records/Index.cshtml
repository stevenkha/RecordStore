@model IEnumerable<RecordStore.Models.Record>

@{
    ViewData["Title"] = "Records";
}

<h1>Records</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@foreach (var item in Model)
{
    <div class="col-md-6 col-xs-8 border-primary mb-3">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-6">
                    <img src="@item.Image" width="100%" alt="@item.Title">
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <p class="card-text"><b>Title: </b>@item.Title</p>
                        <p class="card-text"><b>Release Date: </b>@item.ReleaseDate.ToString("yyyy-MM-dd")</p>
                        <p class="card-text"><b>Artist: </b>@ViewBag.ArtistName[item.Id]</p>
                        <p class="card-text">
                            <b>Condition: </b>
                            @if (item.Condition.ToString().EndsWith("Plus"))
                            {
                                @item.Condition.ToString().Replace("Plus", "+")
                            }
                            else
                            {
                                @item.Condition
                            }
                        </p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer ">
                        <p class="card-text">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary float-right"><i class="bi bi-eye-fill"></i> Details</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<link rel="stylesheet" type="text/css" href="~/css/indexPage.css" />
