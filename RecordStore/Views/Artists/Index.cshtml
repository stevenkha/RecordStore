@model IEnumerable<RecordStore.Models.Artist>

@{
    ViewData["Title"] = "Artists";
}

<h1>Artists</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discography)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) 
    {
        <tr>
            <td class="align-middle">
                <img class="rounded-circle" src="@item.Image" alt="@item.Name" style="max-width: 150px">
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="align-middle">
                @foreach(var record in item.Discography)
                {
                    @Html.DisplayFor(modelItem => record.Title)
                }
            </td>
            <td class="align-middle right-align-cell">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-spacing"><i class="bi bi-pencil-square"></i> Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-spacing"><i class="bi bi-eye"></i> Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-spacing"><i class="bi bi-trash"></i> Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<link rel="stylesheet" type="text/css" href="~/css/indexPage.css" />
